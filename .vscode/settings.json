{
    "[python]": {
        "files.trimTrailingWhitespace": true,
    },
    "python.testing.unittestArgs": [
        "-v",
        "-s",
        "./Tests",
        "-p",
        "test*.py"
    ],
    "python.linting.enabled": true,    
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/__pycache__": true,
        "RhythmPy/*.spec": true,
        "**/build": true,
        "**/dist": true
    },
    "explorerExclude.backup": null,
    "python.formatting.provider": "black",
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--max-line-length=150",
        "--ignore=E402,F841,F401,E302,E305,E711,E712,W503,W605,W391",
    ],
    "python.pythonPath": "c:\\Users\\Assassin\\AppData\\Local\\pypoetry\\Cache\\virtualenvs\\rhythmpy-gDBW14kE-py3.7\\Scripts\\python.exe",
    "python.linting.pylintEnabled": false,
    "cmake.configureOnOpen": true,
    "terminal.integrated.cwd": "RhythmPy/",
    "cmake.sourceDirectory": "${workspaceFolder}/RhythmPy/Updater",
    "cmake.buildDirectory": "${workspaceFolder}/RhythmPy/Updater/Build"
}
