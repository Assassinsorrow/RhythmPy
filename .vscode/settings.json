{
    // vscode stuff
    "editor.formatOnSave": true,
    // "terminal.integrated.cwd": "RhythmPy",

    // python stuff
    "python.analysis.extraPaths": ["./RhythmPy/"],
    "python.linting.enabled": true,
    "python.formatting.provider": "black",
    "python.linting.flake8Enabled": true,
    "python.linting.flake8CategorySeverity.E": "Warning",
    "python.linting.lintOnSave": true,
    "python.linting.flake8Args": [
        "--ignore=E712"
    ],

    // cpp stuff
    "cmake.configureOnOpen": true,
    "cmake.sourceDirectory": "${workspaceFolder}/RhythmPy/Updater",
    "cmake.buildDirectory": "${workspaceFolder}/RhythmPy/Updater/Build",
    "files.associations": {
        "ostream": "cpp",
        "iostream": "cpp"
    },

    // hides files
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/__pycache__": true,
        "RhythmPy/*.spec": true,
        "**/build": true,
        "**/dist": true,
        "poetry.lock": true,
        ".gitattributes": true,
        "LICENSE": true
    },
}